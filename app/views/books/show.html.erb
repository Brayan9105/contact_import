<h1><%= (@book.file.filename).to_s.downcase %></h1>
<table>
  <tr>
    <td class="lead pr-5">Created by:</td>
    <td class="lead">Status:</td>
  </tr>
  <tr>
    <td>
      <p class="lead">
        <%= @book.user.username %></td>
      </p>
    <td>
      <p class="lead">
        <% if @book.status == 'terminado' %> 
          <span class="badge badge-success"><%= @book.status %></span>
        <% else %>
          <span class="badge badge-warning"><%= @book.status %></span>
        <% end %>
      </p>
    </td>
  </tr>
</table><br><br>





<% if @book.status == 'espera' %>

  <p class="lead">Recomendations</p>
  <p>* Organize the columns of your file, assigned the numbers from 0 to 5</p>
  <p>* be careful when assigning the numbers in the fields to avoid errors when processing the contacts </p>

  <%= form_with url: processing_path(@book), method: 'GET' do |f| %>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :date %>
          <%= f.text_field :date, class: 'form-control' %>
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <%= f.label :franchise %>
          <%= f.text_field :franchise, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div>
      </div>
    </div>
    
  </div>
    <%= f.submit 'Processing', class: 'btn btn-success mb-5' %>
  <% end %>
<% end %>

<%= render 'contacts/contact_table', obj: @book.contacts %>

